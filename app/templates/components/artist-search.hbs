{{#power-select
      selected=selectedArtist
      options=artists
      onchange=(action "chooseArtist")
      placeholder="Search for your favorite artist"
      searchField="name"
      searchPlaceholder="Type artist name here"
      as |artist|
    }}
    {{artist.name}}
{{/power-select}}

{{#with selectedArtist as |artist|}}
    <h2>{{artist.name}}</h2>
    <ul>
        {{#each artist.appearances as |appearance|}}
            <li>
                {{appearance.year}} -
                {{appearance.day}}
                ({{appearance.stage}})
                {{#if appearance.notes}}
                    *{{appearance.notes}}
                {{/if}}
            </li>
        {{/each}}
    </ul>
{{/with}}
